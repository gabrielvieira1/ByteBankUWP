<Page
    x:Class="ByteBankUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ByteBankUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid>
    <TextBox x:Name="textBox" Width="300" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    <TextBlock x:Name="textBlock" Width="300" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -100 0 0"/>
    <ToggleSwitch OffContent="Remover consentimento" OnContent="Test2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 100 0 0" Toggled="ToggleSwitch_Toggled"></ToggleSwitch>
  </Grid>
  <Page.BottomAppBar>
    <AppBar IsOpen="True" IsSticky="True">
      <StackPanel Orientation="Horizontal">
        <AppBarButton Icon="Save" Name="GenerateLogs"
                              Label="Generate logs" Click="GenerateLogs_Click"/>
        <AppBarButton Icon="Delete" Name="DeleteLogs"
                              Label="Delete logs" Click="DeleteLogs_Click"/>
      </StackPanel>
    </AppBar>
  </Page.BottomAppBar>
</Page>
